@model personapi_dotnet.Models.Entities.Persona

@{
    ViewData["Title"] = "Eliminar Persona";
}

<h1>Eliminar Persona</h1>

<h3>¿Confirma eliminar esta persona?</h3>

<div>
    <h4>Persona</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Cédula</dt>
        <dd class="col-sm-10">@Model.Cc</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Cc" />
    <button type="submit" class="btn btn-danger">Confirmar eliminación</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
